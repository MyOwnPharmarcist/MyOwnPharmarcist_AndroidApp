<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="8dp"
    android:background="@drawable/round_background"
    app:behavior_hideable="true"
    app:behavior_fitToContents="false"
    app:behavior_peekHeight="120dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".layout.BottomSheetFragment"
    >

    <!-- BottomSheet Handle -->
    <View
        android:id="@+id/bottom_sheet_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/handle_background"
        android:layout_gravity="center_horizontal"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        >

        <!-- persistent bottom sheetì˜ Content -->
        <TextView
            android:id="@+id/bottom_sheet_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom_sheet_store_name"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_store_call_number"
            />

        <TextView
            android:id="@+id/bottom_sheet_store_call_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom_sheet_store_call_number"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_store_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_store_address"
            />

        <TextView
            android:id="@+id/bottom_sheet_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom_sheet_store_address"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_store_call_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_store_time"
            />

        <TextView
            android:id="@+id/bottom_sheet_store_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom_sheet_store_time"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_store_address"
            app:layout_constraintLeft_toLeftOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>